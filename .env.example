# ============================================================================
# DIGITAL SECURE AUTHENTICATION & PAYMENT SYSTEMS - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in with your actual configuration values
# DO NOT commit .env to version control - use .env.example instead
# Generated: 2025-12-15 21:30:41 UTC
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=digital_secure_auth_db
DB_USER=dbuser
DB_PASSWORD=your_secure_database_password_here
DB_DIALECT=postgres
# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ============================================================================
# REDIS CONFIGURATION (Caching & Session Storage)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_CACHE_TTL=3600
# Enable Redis for sessions
REDIS_ENABLED=true
# Cluster mode (set to true if using Redis cluster)
REDIS_CLUSTER_ENABLED=false

# ============================================================================
# JWT (JSON Web Token) CONFIGURATION
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400
JWT_REFRESH_TOKEN_EXPIRATION=604800
JWT_ISSUER=digital-secure-auth-system
JWT_AUDIENCE=api-users

# ============================================================================
# MULTI-FACTOR AUTHENTICATION (MFA) CONFIGURATION
# ============================================================================
# TOTP (Time-based One-Time Password)
MFA_TOTP_ENABLED=true
MFA_TOTP_WINDOW=1
MFA_TOTP_STEP=30
# Email OTP
MFA_EMAIL_ENABLED=true
MFA_EMAIL_EXPIRATION=600
# SMS OTP
MFA_SMS_ENABLED=true
MFA_SMS_EXPIRATION=600
# Backup codes
MFA_BACKUP_CODES_COUNT=10
# Enforce MFA for all users
MFA_ENFORCE_ALL_USERS=false

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================================
# Stripe Configuration
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_API_VERSION=2023-10-16
# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
# Razorpay Configuration (India)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
# Square Configuration
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_ENVIRONMENT=sandbox
# General payment settings
PAYMENT_CURRENCY=USD
PAYMENT_WEBHOOK_TIMEOUT=30000

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password_here
SMTP_SECURE=true
SMTP_REQUIRE_TLS=true
# Email service provider (sendgrid, mailgun, sendpulse, etc.)
EMAIL_SERVICE=smtp
# Sender details
EMAIL_FROM_NAME=Digital Secure Auth System
EMAIL_FROM_ADDRESS=noreply@digitalsecureauth.com
# Email templates
EMAIL_TEMPLATES_DIR=./email-templates
# Email verification
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_EXPIRATION=86400

# ============================================================================
# SMS CONFIGURATION
# ============================================================================
# Twilio Configuration
TWILIO_ENABLED=true
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
# AWS SNS Configuration
AWS_SNS_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# Vonage (Nexmo) Configuration
VONAGE_ENABLED=false
VONAGE_API_KEY=your_vonage_api_key_here
VONAGE_API_SECRET=your_vonage_api_secret_here
VONAGE_FROM_NUMBER=YourBrand
# SMS settings
SMS_VERIFICATION_ENABLED=true
SMS_VERIFICATION_EXPIRATION=600

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: error, warn, info, http, debug, verbose, silly
LOG_LEVEL=info
# Log format: json, simple, combined
LOG_FORMAT=json
# Log output
LOG_DIR=./logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=14
# Winston logging
WINSTON_ENABLED=true
# Morgan HTTP logging
MORGAN_ENABLED=true
MORGAN_FORMAT=combined
# Database query logging
DB_QUERY_LOGGING=false
# API request/response logging
API_LOGGING_ENABLED=true
# Sentry error tracking
SENTRY_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# ============================================================================
# CORS (Cross-Origin Resource Sharing) CONFIGURATION
# ============================================================================
# Allow multiple origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-Token
CORS_EXPOSED_HEADERS=X-Total-Count,X-Page-Number
CORS_MAX_AGE=86400

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Helmet.js security headers
HELMET_ENABLED=true
# Content Security Policy
CSP_ENABLED=true
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=false
# Login attempt limiting
LOGIN_ATTEMPT_LIMIT=5
LOGIN_ATTEMPT_WINDOW=900000
LOGIN_ATTEMPT_LOCKOUT_TIME=1800000
# Password policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_EXPIRATION_DAYS=90
PASSWORD_HISTORY_COUNT=5
# Session settings
SESSION_SECRET=your_session_secret_key_change_this_in_production
SESSION_MAX_AGE=3600000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
# CSRF Protection
CSRF_PROTECTION_ENABLED=true
# SQL Injection prevention
SQL_INJECTION_PREVENTION=true
# XSS Protection
XSS_PROTECTION_ENABLED=true
# Encryption keys
ENCRYPTION_KEY=your_encryption_key_32_characters_long
ENCRYPTION_ALGORITHM=aes-256-cbc
# API key validation
API_KEY_VALIDATION=true
# IP Whitelisting/Blacklisting
IP_FILTERING_ENABLED=false
IP_WHITELIST=127.0.0.1,192.168.1.0/24
IP_BLACKLIST=10.0.0.0/8

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
APP_NAME=Digital Secure Auth System
APP_PORT=5000
APP_HOST=0.0.0.0
APP_URL=http://localhost:5000
API_VERSION=v1
API_PREFIX=/api/v1
# Timezone
TZ=UTC
# Request body size limit
REQUEST_BODY_LIMIT=10mb
REQUEST_PARAMETER_LIMIT=50
# File upload settings
MAX_FILE_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ============================================================================
# EXTERNAL SERVICES INTEGRATION
# ============================================================================
# Google OAuth
GOOGLE_OAUTH_ENABLED=false
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback
# GitHub OAuth
GITHUB_OAUTH_ENABLED=false
GITHUB_OAUTH_CLIENT_ID=your_github_client_id_here
GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret_here
GITHUB_OAUTH_CALLBACK_URL=http://localhost:5000/api/v1/auth/github/callback
# Microsoft OAuth
MICROSOFT_OAUTH_ENABLED=false
MICROSOFT_OAUTH_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_OAUTH_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_OAUTH_CALLBACK_URL=http://localhost:5000/api/v1/auth/microsoft/callback

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
# Datadog
DATADOG_ENABLED=false
DATADOG_API_KEY=your_datadog_api_key_here
DATADOG_APP_KEY=your_datadog_app_key_here
# New Relic
NEW_RELIC_ENABLED=false
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ADVANCED_ENCRYPTION=true
FEATURE_BIOMETRIC_AUTH=false
FEATURE_PASSWORDLESS_LOGIN=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_ACCOUNT_LINKING=true
FEATURE_AUDIT_LOGGING=true

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================
# AWS S3 for backups
AWS_S3_ENABLED=false
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=us-east-1
# Backup schedule (cron expression)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
